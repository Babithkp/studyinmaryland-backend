generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName             String
  lastName              String
  gender                String
  address               String
  town                  String
  state                 String
  country               String
  dob                   String
  nationality           String
  email                 String   @unique
  phone                 String
  residence             String
  programType           String
  studyProgram          String
  courseStartMonth      String
  courseStartYear       String
  identityDocName       String
  degreeDocName         String[]
  academicDocName       String[]
  birthDocName          String?
  motivationDocName     String?
  ieltsDocName          String?
  englishDocName        String[]
  recommendationDocName String?
}


model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @default("admin@gmail.com")
  password String @default("admin")
}
